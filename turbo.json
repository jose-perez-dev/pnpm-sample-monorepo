{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "topo": {
      "dependsOn": ["^topo"]
    },
    "lint": {
      "dependsOn": ["topo"]
    },
    "test": {
      "dependsOn": ["topo"]
    }
  },
  "globalDependencies": [
    "package.json",
    "tsconfig.json",
    "tsconfig.base.json",
    "jest.config.js",
    ".eslintrc.js"
  ]
}
