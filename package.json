{
  "name": "pnpm-sample-monorepo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "scripts": {
    "build:web": "pnpm --filter=web build",
    "clean:deep": "pnpm -r run clean:deep && rimraf node_modules",
    "clean:tests:root": "pnpm remove jest @testing-library/react @testing-library/jest-dom ts-jest @types/jest",
    "clean:tests:web": "pnpm --filter=web remove jest @testing-library/react @testing-library/jest-dom ts-jest @types/jest @swc/jest",
    "clean:tests": "node scripts/remove-tests.js && pnpm clean:tests:root && pnpm clean:tests:web",
    "clean": "pnpm -r run clean",
    "dev:web": "pnpm --filter=web dev",
    "lint:all": "pnpm lint:web && pnpm lint:ui",
    "lint:ui": "pnpm --filter=@pnpm-sample-monorepo/ui lint",
    "lint:web": "pnpm --filter=web lint",
    "start:web:dev": "pnpm --filter=web dev",
    "story:build:ui": "pnpm --filter=@pnpm-sample-monorepo/ui build-storybook",
    "story:ui": "pnpm --filter=@pnpm-sample-monorepo/ui storybook",
    "test:all": "pnpm test:web && pnpm test:ui",
    "test:ui": "pnpm --filter=@pnpm-sample-monorepo/ui test",
    "test:web": "pnpm --filter=web test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@pnpm-sample-monorepo/eslint-config": "workspace:*",
    "@pnpm-sample-monorepo/stylelint-config": "workspace:*",
    "@pnpm-sample-monorepo/tailwind-config": "workspace:*",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.35.0",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "dotenv": "^16.5.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "15.3.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "30.0.2",
    "jest-silent-reporter": "^0.6.0",
    "postcss": "^8.5.6",
    "rimraf": "^6.0.1",
    "sass": "^1.89.2",
    "stylelint": "^15.11.0",
    "swc_mut_cjs_exports": "^10.7.0",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.3.4",
    "turbo": "^2.5.3",
    "typescript": "^5"
  }
}
